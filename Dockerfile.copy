FROM debian:bookworm-slim

RUN apt-get update \
    && apt-get install -y --no-install-recommends ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY lure /app/lure
RUN chmod 0755 /app/lure \
    # Smoke test: verify the binary starts and is executable.
    && /app/lure --version

CMD ["/app/lure"]
